<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="500.0" prefWidth="470.0" xmlns="http://javafx.com/javafx/11.0.2"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ChatController">
    <ListView fx:id="listView" layoutX="15.0" layoutY="15.0" prefHeight="430.0" prefWidth="320.0"/>
    <TextField fx:id="input" layoutX="15.0" layoutY="445.0" onAction="#sendMessage" prefHeight="40.0"
               prefWidth="320.0"/>
    <Button id="getList" layoutX="368.0" layoutY="13.0" mnemonicParsing="false" onAction="#getList" prefHeight="70.0"
            prefWidth="78.0" text="Get server list" textAlignment="CENTER" textOverrun="CLIP" wrapText="true"/>
    <Button layoutX="368.0" layoutY="96.0" minHeight="70.0" minWidth="78.0" mnemonicParsing="false"
            onAction="#getMyFiles" prefHeight="70.0" prefWidth="78.0" text="Get My Files"
            textAlignment="CENTER" textOverrun="CLIP" wrapText="true"/>
    <Button fx:id="loadButton" layoutX="368.0" layoutY="261.0" minHeight="70.0" minWidth="78.0" mnemonicParsing="false"
            onAction="#loadFile" prefHeight="70.0" prefWidth="78.0" text="Load" textAlignment="CENTER"
            textOverrun="CLIP" wrapText="true"/>
    <Button fx:id="downloadButton" layoutX="368.0" layoutY="180.0" minHeight="70.0" minWidth="78.0" mnemonicParsing="false"
            onAction="#downloadFile" prefHeight="70.0" prefWidth="78.0" text="Download"
            textAlignment="CENTER" textOverrun="CLIP" wrapText="true">
        <font>
            <Font size="12.0"/>
        </font>
    </Button>
</AnchorPane>
